<div class="container">
  <h1> INDEX PROJECTS </h1>
  <div class="d-flex flex-row flex-wrap mb-5">
    <%# if !@articles.empty? %>
    <% @projects.each do |project| %>
      <div class="project--card m-2 p-3">
        <div class="p-4 project--column">
          <div  class="text-end align-bottom" >
            <h3 class="p-0">#<%= project.id %>, <%= project.name%> </h3>
            <%= link_to "View", project_path(project)%>
            <%= link_to "Edit", edit_project_path(project)%> 
            <%= link_to "Delete", project_path(project), :method => :Delete, data: {confirm: "Are you sure you want to delete this?"} %>
          </div>
          <hr/>
          <div>
            <%=project.description%>
          </div>
        </div>
      </div>
    <% end %>
    <div class="category--card m-2 p-3"> 
      <div class="project--column"> 
        <%= link_to "New Project", new_project_path%> 
      </div>
    </div>
  </div>
  <%= link_to "Back", root_path, class:"btn btn-secondary"%>
    <%= link_to "New Project", new_project_path, class:"btn btn-secondary"%>
</div>