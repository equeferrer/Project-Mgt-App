<div class="container mt-5">
  <div class="form-layout-center account-form mt-5">
    <h2 class="text-center mb-4 mt-2" style="color:gray">Forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-floating float-pass-2 mb-4 mt-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "floatingInput", placeholder: "name@example.com" %>
      <%= f.label :email, for: "floatingInput" %>
    </div>

    <div class="actions text-center mb-3">
      <%= f.submit "Send me reset password instructions", class:"btn btn-custom-success", style:"width:100%" %>
    </div>
    <% end %>
  </div>
</div>
<%= render 'layouts/bg-images'%>
